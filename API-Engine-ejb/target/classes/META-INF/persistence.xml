<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="apiman-manager-api-jpa" transaction-type="RESOURCE_LOCAL">
        <!--     <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider> -->

        <class>com.t1t.digipolis.apim.beans.idm.UserBean</class>
        <class>com.t1t.digipolis.apim.beans.idm.RoleBean</class>
        <class>com.t1t.digipolis.apim.beans.idm.RoleMembershipBean</class>
        <class>com.t1t.digipolis.apim.beans.orgs.OrganizationBean</class>
        <class>com.t1t.digipolis.apim.beans.apps.ApplicationBean</class>
        <class>com.t1t.digipolis.apim.beans.apps.ApplicationVersionBean</class>
        <class>com.t1t.digipolis.apim.beans.services.ServiceBean</class>
        <class>com.t1t.digipolis.apim.beans.services.ServiceVersionBean</class>
        <class>com.t1t.digipolis.apim.beans.services.ServiceDefinitionBean</class>
        <class>com.t1t.digipolis.apim.beans.services.ServicePlanBean</class>
        <class>com.t1t.digipolis.apim.beans.plans.PlanBean</class>
        <class>com.t1t.digipolis.apim.beans.plans.PlanVersionBean</class>
        <class>com.t1t.digipolis.apim.beans.contracts.ContractBean</class>
        <class>com.t1t.digipolis.apim.beans.policies.PolicyDefinitionBean</class>
        <class>com.t1t.digipolis.apim.beans.policies.PolicyDefinitionTemplateBean</class>
        <class>com.t1t.digipolis.apim.beans.policies.PolicyBean</class>
        <class>com.t1t.digipolis.apim.beans.audit.AuditEntryBean</class>
        <class>com.t1t.digipolis.apim.beans.gateways.GatewayBean</class>
        <class>com.t1t.digipolis.apim.beans.plugins.PluginBean</class>

        <properties>
            <property name="hibernate.show_sql" value="false" />
            <property name="hibernate.id.new_generator_mappings" value="true" />
            <property name="hibernate.order_updates" value="true"/>
            <property name="hibernate.connection.autocommit" value="false"/>
            <property name="hibernate.format_sql" value="true"/>


            <!-- Don't allow WF/EAP to manage the persistence unit - vital since we're dynamically setting most of the
            properties *after* WF/EAP has started! -->
            <property name="jboss.as.jpa.managed" value="false"/>

        </properties>
    </persistence-unit>

</persistence>
